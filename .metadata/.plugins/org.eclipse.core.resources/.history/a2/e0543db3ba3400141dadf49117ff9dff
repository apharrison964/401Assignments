package a1;

import java.util.Scanner;

public class A1Adept {

	public static void main(String[] args) {
	       Scanner s = new Scanner(System.in);

	       process(s);
	}
	
	
 static void process(Scanner s) {
		
		int[] items = new int[10];
		double[] cost = new double [10];
		int category = 0;
		int quantity = 0;
		double price = 0;
		int biggest = 0;
		double biggestPrice = 0;
		int categoryNew = 0;
		double priceNew = 0;
		double priceNew2 = 0;
		String a1 = "end";
		String b1 = "end";
		
		
		    
		while (s.hasNext() == true) {
			
			String name = s.next();
			category = s.nextInt();
		    price = s.nextDouble();
			//quantity = s.nextInt();
			cost[category] += price * quantity;
		    items[quantity] += quantity;
		    
			
		    
			if(a1.equals(b1)){
		    	break;
			}
	
		    
			for (int i=0; i < items.length; i++) {
				if (quantity >= biggest) {
					biggest = quantity;
					categoryNew = category;
				}
			
				if (price * quantity >= biggestPrice) {
					biggestPrice = price * quantity;
					priceNew = category;
				}
				
				if (price >= biggestPrice) {
					biggestPrice = price;
					priceNew2 = category;
			}
		}
		
			System.out.println("Category with the most items: " + categoryNew);
			System.out.println("Category with the fewest items " + priceNew);
			System.out.println("Category with the largest cost: " + priceNew2);
			//System.out.println("Category with the least cost: " + );
		
	}
}
}




